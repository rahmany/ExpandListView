<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/childbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/addButton"
        android:focusable="false" />

    <TextView
        android:id="@+id/childeventtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        
        android:textSize="16sp" />

    <TextView
        android:id="@+id/childeventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/childeventtime"
        android:layout_alignBottom="@+id/childeventtime"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@id/childeventtime"
        
        android:textSize="16sp" />

</RelativeLayout>